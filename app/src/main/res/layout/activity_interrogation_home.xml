<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.healthyfish.healthyfish.ui.fragment.InterrogationFragment"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="1020px"
        android:layout_height="96px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24px"
        android:gravity="center_vertical"
        android:background="@drawable/rounded_rectangle_white">

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="62px"
            android:layout_height="62px"
            android:layout_marginLeft="17px"
            android:background="@mipmap/search" />

        <EditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32px"
            android:layout_marginRight="32px"
            android:inputType="text"
            android:imeOptions="actionSearch"
            android:background="@null"
            android:maxLines="1"
            android:hint="搜索医生、疾病、服务"
            android:textColorHint="@color/color_general_and_title"
            android:textColor="@color/color_general_and_title"
            style="@style/textSize_36"/>

    </com.zhy.autolayout.AutoLinearLayout>

    <com.healthyfish.healthyfish.ui.widget.AutoCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35px"
        app:elevation="8dp">


        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="540px"
            android:background="@mipmap/bg_hospital"
            android:orientation="vertical">

            <Button
                android:id="@+id/choose_hospital"
                style="@style/textSize_60"
                android:layout_width="880px"
                android:layout_height="120px"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="270px"
                android:background="@drawable/selector_1dp_btn_color_from_secondary_to_white"
                android:text="选择医院"
                android:textColor="@color/color_white" />
        </com.zhy.autolayout.AutoLinearLayout>
    </com.healthyfish.healthyfish.ui.widget.AutoCardView>

    <com.healthyfish.healthyfish.ui.widget.AutoCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35px"
        app:elevation="8dp">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="540px"
            android:background="@mipmap/bg_department"
            android:orientation="vertical">

            <Button
                android:id="@+id/choose_department"
                style="@style/textSize_60"
                android:layout_width="880px"
                android:layout_height="120px"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="270px"
                android:background="@drawable/selector_1dp_btn_color_from_priamry_to_white"
                android:text="选择科室"
                android:textColor="@color/color_white" />
        </com.zhy.autolayout.AutoLinearLayout>
    </com.healthyfish.healthyfish.ui.widget.AutoCardView>

   <!-- <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36px"
        android:layout_marginLeft="30px"
        android:text="按照科室找医生"
        style="@style/textSize_42"
        android:textColor="@color/color_general_and_title"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_choice_department"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px">

    </android.support.v7.widget.RecyclerView>-->

</com.zhy.autolayout.AutoLinearLayout>
