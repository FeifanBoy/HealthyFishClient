<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="135px"
        android:background="@color/color_primary_dark"
        android:focusableInTouchMode="true"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
        app:popupTheme="@style/Base.ThemeOverlay.AppCompat.Light">

        <TextView
            android:id="@+id/toolbar_title"
            style="@style/big_content_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="修改个人信息"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/tv_save"
            style="@style/textSize_54"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="36px"
            android:text="保存"
            android:textColor="@color/selector_text_color_from_white_to_primary" />

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ_head_portrait"
                android:layout_width="230px"
                android:layout_height="230px"
                android:layout_marginTop="30px"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/ic_logo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="57px"
                android:layout_marginTop="30px"
                android:text="基本信息"
                android:textColor="@color/color_auxiliary_info"
                android:textSize="42px" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25px"
                android:background="@android:color/white"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_nickname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="54px"
                    android:background="@null"
                    android:maxLines="1"
                    android:hint="昵称"
                    android:paddingBottom="30px"
                    android:paddingTop="30px"
                    android:textColor="@color/color_general_and_title"
                    android:textColorHint="@color/color_hint"
                    android:textSize="55px" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="54px"
                    android:layout_marginRight="54px"
                    android:background="@color/color_light_gray" />

                <TextView
                    android:id="@+id/tv_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="54px"
                    android:hint="性别"
                    android:paddingBottom="30px"
                    android:paddingTop="30px"
                    android:textColor="@color/color_general_and_title"
                    android:textColorHint="@color/color_hint"
                    android:textSize="55px"
                    android:clickable="true"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="54px"
                    android:layout_marginRight="54px"
                    android:background="@color/color_light_gray" />

                <TextView
                    android:id="@+id/tv_birthDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="54px"
                    android:hint="出生日期"
                    android:paddingBottom="30px"
                    android:paddingTop="30px"
                    android:textColor="@color/color_general_and_title"
                    android:textColorHint="@color/color_hint"
                    android:textSize="55px"
                    android:clickable="true"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="54px"
                    android:layout_marginRight="54px"
                    android:background="@color/color_light_gray"/>



            </com.zhy.autolayout.AutoLinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="57px"
                android:layout_marginTop="30px"
                android:text="常用手机号（方便医生联系您）"
                android:textColor="@color/color_auxiliary_info"
                android:textSize="42px" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:background="@android:color/white"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_phoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="54px"
                    android:background="@null"
                    android:inputType="number"
                    android:maxLength="11"
                    android:maxLines="1"
                    android:hint="手机号"
                    android:paddingBottom="30px"
                    android:paddingTop="30px"
                    android:textColor="@color/color_general_and_title"
                    android:textColorHint="@color/color_hint"
                    android:textSize="55px" />

            </com.zhy.autolayout.AutoLinearLayout>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="57px"
                android:layout_marginTop="30px"
                android:text="姓名"
                android:textColor="@color/color_auxiliary_info"
                android:textSize="42px" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:background="@android:color/white"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="54px"
                    android:background="@null"
                    android:maxLines="1"
                    android:hint="姓名"
                    android:paddingBottom="30px"
                    android:paddingTop="30px"
                    android:textColor="@color/color_general_and_title"
                    android:textColorHint="@color/color_hint"
                    android:textSize="55px" />

            </com.zhy.autolayout.AutoLinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="57px"
                android:layout_marginTop="30px"
                android:text="身份证（用于绑定医保卡）"
                android:textColor="@color/color_auxiliary_info"
                android:textSize="42px" />

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/lly_id_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@color/color_white">

                <EditText
                    android:id="@+id/et_idCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="54px"
                    android:background="@null"
                    android:maxLines="1"
                    android:maxLength="18"
                    android:inputType="number"
                    android:hint="身份证号"
                    android:paddingBottom="30px"
                    android:paddingTop="30px"
                    android:textColor="@color/color_general_and_title"
                    android:textColorHint="@color/color_hint"
                    android:textSize="55px" />

                <ImageView
                    android:id="@+id/iv_go"
                    android:layout_width="94px"
                    android:layout_height="97px"
                    android:padding="30px"
                    android:src="@mipmap/ic_more_horizontal"/>

            </com.zhy.autolayout.AutoLinearLayout>

        </com.zhy.autolayout.AutoLinearLayout>

    </ScrollView>

</com.zhy.autolayout.AutoLinearLayout>
