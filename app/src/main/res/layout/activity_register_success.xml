<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <ImageView
        android:layout_width="316px"
        android:layout_height="316px"
        android:layout_marginTop="200px"
        android:src="@mipmap/ic_login_success"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="66px"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="72px"
            android:textColor="@color/colorPrimary"
            android:text="恭喜您注册成功"/>

        <TextView
            android:id="@+id/tv_back_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50px"
            android:layout_gravity="right"
            android:text="返回首页>"
            android:textSize="42px"
            android:textColor="@color/color_hint"/>
    </com.zhy.autolayout.AutoLinearLayout>

    <Button
        android:layout_width="720px"
        android:layout_height="wrap_content"
        android:layout_marginTop="155px"
        android:paddingBottom="35px"
        android:paddingTop="35px"
        android:gravity="center"
        android:background="@color/colorPrimary"
        android:text="添加健康档案"
        android:textSize="54px"
        android:textColor="@android:color/white"/>

</com.zhy.autolayout.AutoLinearLayout>
