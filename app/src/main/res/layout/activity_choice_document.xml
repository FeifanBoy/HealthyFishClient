<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"
        android:layout_marginBottom="50px"
        android:layout_weight="1">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ListView
                android:id="@+id/lv_choice_document"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:divider="@null" />

            <Button
                android:id="@+id/bt_add_new_document"
                style="@style/textSize_48"
                android:layout_width="972px"
                android:layout_height="120px"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20px"
                android:background="@drawable/selector_4dp_btn_color_from_priamry_to_white"
                android:text="添加新档案"
                android:textColor="@color/selector_text_color_from_white_to_primary" />

        </com.zhy.autolayout.AutoLinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/btn_done"
        style="@style/textSize_48"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/selector_1dp_btn_color_from_priamry_to_white"
        android:gravity="center"
        android:text="完成"
        android:textColor="@color/selector_text_color_from_white_to_primary" />

</com.zhy.autolayout.AutoLinearLayout>
