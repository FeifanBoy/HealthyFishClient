<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_doctor"
        android:layout_width="198px"
        android:layout_height="198px"
        android:layout_marginLeft="51px"
        android:layout_marginTop="81px"
        android:src="@mipmap/ic_male_select" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="54px"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            style="@style/textSize_66"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48px"
            android:text="非凡"
            android:textColor="@color/color_general_and_title" />

        <TextView
            android:id="@+id/tv_DepartmentAndTitle"
            style="@style/textSize_48"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:text="中医科  主任医师"
            android:textColor="@color/color_auxiliary_info" />

        <TextView
            android:id="@+id/tv_doctorCompany"
            style="@style/textSize_48"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11px"
            android:text="柳州市中医院"
            android:textColor="@color/color_auxiliary_info" />

        <!--android:layout_marginTop="33px"
            android:layout_marginBottom="24px"-->

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/ckb_attention"
                style="@style/textSize_42"
                android:layout_width="180px"
                android:layout_height="72px"
                android:layout_marginBottom="24px"
                android:layout_marginTop="33px"
                android:background="@drawable/selector_ckb_bg_color_from_white_to_primary"
                android:button="@null"
                android:gravity="center"
                android:text="+关注"
                android:textColor="@color/selector_ckb_text_color_from_primary_to_white" />

            <Button
                android:id="@+id/btn_sendTheMind"
                style="@style/textSize_42"
                android:layout_width="180px"
                android:layout_height="72px"
                android:layout_marginBottom="24px"
                android:layout_marginLeft="60px"
                android:layout_marginTop="33px"
                android:background="@drawable/selector_2dp_btn_color_from_white_to_secondary"
                android:text="送心意"
                android:textColor="@color/selector_text_color_from_secondary_to_white" />


        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>

