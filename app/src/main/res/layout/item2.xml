<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="260px"
        android:orientation="horizontal"
        android:paddingLeft="50px"
        android:paddingRight="50px"
        android:paddingTop="30px">
        <ImageView
            android:layout_marginRight="10px"
            android:layout_width="300px"
            android:layout_height="match_parent"
            android:layout_marginBottom="20px"
            android:layout_marginTop="20px"
            android:background="@mipmap/ic_pay_success" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0dp"
            android:layout_height="260px"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/textSize_54"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="世界最强四大黑帮，中国有一个上榜，四百年无人敢惹"
                android:textColor="@color/color_general_and_title" />

            <TextView
                style="@style/textSize_48"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:text="历史烟云"
                android:textColor="@color/color_auxiliary_info" />
        </com.zhy.autolayout.AutoLinearLayout>


    </com.zhy.autolayout.AutoLinearLayout>
    <ImageView
        style="@style/Divider" />
</com.zhy.autolayout.AutoLinearLayout>