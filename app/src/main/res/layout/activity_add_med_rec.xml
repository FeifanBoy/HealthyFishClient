<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.healthyfish.healthyfish.ui.activity.NewMedRec">
    <include layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:orientation="vertical">

                <TextView
                    style="@style/TextView_Lable"
                    android:layout_marginTop="50px"
                    android:text="标签" />

                <TextView
                    android:id="@+id/lable"
                    style="@style/EditText_Hint"
                    android:clickable="true" />

                <ImageView style="@style/Divider" />

                <TextView
                    style="@style/TextView_Lable"
                    android:text="患者信息" />

                <TextView
                    android:id="@+id/name"
                    style="@style/EditText_Hint"
                    android:text="姓名" />

                <TextView
                    android:id="@+id/patient_info"
                    style="@style/EditText_Hint"
                    android:clickable="true" />

                <ImageView style="@style/Divider" />

                <TextView
                    style="@style/TextView_Lable"
                    android:text="诊断" />

                <EditText style="@style/EditText_Hint" />

                <ImageView style="@style/Divider" />

                <TextView
                    style="@style/TextView_Lable"
                    android:text="病情信息" />

                <EditText style="@style/EditText_Hint" />

                <ImageView style="@style/Divider" />

                <TextView
                    style="@style/TextView_Lable"
                    android:text="就诊科室" />

                <EditText style="@style/EditText_Hint" />

                <ImageView style="@style/Divider" />

                <TextView
                    style="@style/TextView_Lable"
                    android:text="就诊时间" />

                <TextView
                    android:id="@+id/clinical_time"
                    style="@style/EditText_Hint"
                    android:clickable="true" />

                <ImageView
                    style="@style/Divider"
                    android:layout_marginBottom="30px" />
            </com.zhy.autolayout.AutoLinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="75px"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/new_the_course_of_the_disease"
                android:textColor="@color/colorPrimaryDark" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/course_of_disease"
                android:layout_marginLeft="50px"
                android:layout_marginRight="50px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

        </com.zhy.autolayout.AutoLinearLayout>


    </ScrollView>

</com.zhy.autolayout.AutoLinearLayout>
