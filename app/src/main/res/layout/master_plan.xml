<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="450px"
    android:id="@+id/layout"
    android:background="@mipmap/master_plan_bg"
    android:clickable="true"
    android:orientation="vertical"
    android:paddingLeft="55px"
    android:paddingRight="55px">

    <TextView
        android:id="@+id/tv_title"
        style="@style/textSize_54"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70px"
        android:text="一周体质养生计划"
        android:textColor="@color/color_white" />

    <TextView
        android:id="@+id/tv_detail"
        style="@style/textSize_42"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45px"
        android:text="全时段  艾灸"
        android:textColor="@color/color_white" />
    <!--    android:text="第11/14天  全时段  针灸"-->
    <TextView
        android:id="@+id/tv_progress"
        style="@style/textSize_42"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40px"
        android:text="已完成 82%"
        android:textColor="@color/color_white" />


    <ProgressBar
        android:id="@+id/progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="48px"
        android:layout_marginTop="30px"
        android:max="10"
        android:progress="6"
        android:progressDrawable="@drawable/progrssbar" />

</com.zhy.autolayout.AutoLinearLayout>




