<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.healthyfish.healthyfish.ui.widget.AutoCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24px"
        android:layout_marginRight="24px"
        app:cardCornerRadius="4px"
        app:cardElevation="4px">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_community_img"
            android:layout_width="146px"
            android:layout_height="146px"
            android:layout_marginBottom="10px"
            android:layout_marginLeft="32px"
            android:layout_marginTop="17px" />

        <TextView
            android:id="@+id/tv_community_name"
            style="@style/textSize_60"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="213px"
            android:layout_marginTop="16px"
            android:text="气虚质养生社区"
            android:textColor="@color/color_general_and_title" />

        <TextView
            android:id="@+id/tv_community_content"
            style="@style/textSize_42"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="213px"
            android:layout_marginTop="115px"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="气虚质板块的主要内容"
            android:textColor="@color/color_small_content" />

    </com.healthyfish.healthyfish.ui.widget.AutoCardView>

</com.zhy.autolayout.AutoLinearLayout>
