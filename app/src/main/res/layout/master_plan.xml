<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:clickable="true"
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="450px"
        android:background="@mipmap/master_plan_bg"
        android:orientation="vertical"
        android:paddingLeft="55px"
        android:paddingRight="55px">

        <TextView
            android:id="@+id/tv_title1"
            style="@style/textSize_54"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70px"
            android:text="一周体质养生计划"
            android:textColor="@color/color_white" />

        <TextView
            android:id="@+id/tv_detail1"
            style="@style/textSize_42"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45px"
            android:text="全时段  艾灸"
            android:textColor="@color/color_white" />
        <!--    android:text="第11/14天  全时段  针灸"-->
        <TextView
            android:id="@+id/tv_progress1"
            style="@style/textSize_42"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px"
            android:text="已完成 82%"
            android:textColor="@color/color_white" />


        <ProgressBar
            android:id="@+id/progressbar1"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="48px"
            android:layout_marginTop="30px"
            android:max="10"
            android:progress="6"
            android:progressDrawable="@drawable/progrssbar" />

    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/layout2"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="450px"
        android:background="@mipmap/master_plan_bg"
        android:orientation="vertical"
        android:paddingLeft="55px"
        android:paddingRight="55px">

        <TextView
            android:id="@+id/tv_title2"
            style="@style/textSize_54"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70px"
            android:text="一周体质养生计划"
            android:textColor="@color/color_white" />

        <TextView
            android:id="@+id/tv_detail2"
            style="@style/textSize_42"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45px"
            android:text="全时段  针灸"
            android:textColor="@color/color_white" />
        <!--    android:text="第11/14天  全时段  针灸"-->
        <TextView
            android:id="@+id/tv_progress2"
            style="@style/textSize_42"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px"
            android:text="已完成 82%"
            android:textColor="@color/color_white" />


        <ProgressBar
            android:id="@+id/progressbar2"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="48px"
            android:layout_marginTop="30px"
            android:max="10"
            android:progress="6"
            android:progressDrawable="@drawable/progrssbar" />
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>

