<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="horizontal">
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="160px"
        android:orientation="vertical">
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35px"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小李"
                style="@style/content_title_text"
                android:textSize="36px"
                android:layout_marginLeft="55px"

                />
            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/genera_title_text"
                android:text="2017年6月30日"
                android:paddingLeft="140px"/>
        </TableRow>
        <TextView
            android:id="@+id/description"
            android:layout_width="867px"
            android:layout_height="wrap_content"
            android:paddingLeft="55px"
            android:ellipsize="end"
            style="@style/genera_title_text"
            android:maxLines="1"
            android:text="水电开发军嫂放松；啊fdgd机家覅哦健身房；爱上发生纠纷"/>
    </com.zhy.autolayout.AutoLinearLayout>


    <CheckBox
        android:id="@+id/select"
        android:layout_width="60px"
        android:layout_height="60px"
        android:layout_marginRight="35px"
        android:layout_gravity="center_vertical"
        android:background="@drawable/select_circle"
        android:button="@android:color/transparent"
        android:textOff=""
        android:textOn=""/>

</com.zhy.autolayout.AutoLinearLayout>
