<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="413px"
        android:layout_height="364px"
        android:layout_marginTop="83px"
        android:layout_gravity="center"
        android:src="@mipmap/ic_logo"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="972px"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100px"
        android:paddingTop="40px"
        android:paddingBottom="40px"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="48px"
            android:layout_height="58px"
            android:layout_marginLeft="48px"
            android:src="@mipmap/ic_login_user"/>

        <EditText
            android:id="@+id/et_input_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70px"
            android:hint="输入手机号"
            android:background="@null"
            android:textSize="48px"/>

    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="972px"
        android:layout_height="wrap_content"
        android:layout_marginTop="70px"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="546px"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="40px"
            android:paddingBottom="40px"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="48px"
                android:layout_height="58px"
                android:layout_marginLeft="48px"
                android:src="@mipmap/ic_input_validation_code"/>

            <EditText
                android:id="@+id/et_input_validation_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70px"
                android:hint="输入验证码"
                android:background="@null"
                android:textSize="48px"/>

        </com.zhy.autolayout.AutoLinearLayout>

        <Button
            android:layout_width="366px"
            android:layout_height="match_parent"
            android:layout_marginLeft="60px"
            android:gravity="center"
            android:textSize="48px"
            android:textColor="@android:color/white"
            android:text="获取短信验证码"/>

    </com.zhy.autolayout.AutoLinearLayout>

    <Button
        android:layout_width="882px"
        android:layout_height="wrap_content"
        android:layout_marginTop="190px"
        android:paddingTop="40px"
        android:paddingBottom="40px"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/color_orange"
        android:textSize="54px"
        android:text="注册"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160px"
        android:layout_gravity="center"
        android:textSize="42px"
        android:text="点击注册即表示您同意"/>

    <TextView
        android:id="@+id/tv_agreement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50px"
        android:layout_gravity="center"
        android:text="《太医医生服务条款及协议》"
        android:textColor="@color/color_orange"
        android:textSize="54px"/>

</com.zhy.autolayout.AutoLinearLayout>


