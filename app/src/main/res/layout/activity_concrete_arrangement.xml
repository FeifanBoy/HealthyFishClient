<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginTop="36px"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/textSize_48"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="55px"
            android:text="开启提醒"
            android:textColor="@color/color_auxiliary_info" />

        <ToggleButton
            android:id="@+id/switch_open_reminder"
            android:layout_width="128px"
            android:layout_height="64px"
            android:layout_marginRight="30px"
            android:background="@drawable/switch_togglebtn"
            android:gravity="center_vertical"
            android:textOff=""
            android:textOn="" />

    </com.zhy.autolayout.AutoLinearLayout>

    <ListView
        android:id="@+id/lv_concrete_arrangement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="36px"
        android:divider="#00000000"
        android:dividerHeight="36px" />

    <Button
        android:id="@+id/bt_next"
        style="@style/textSize_54"
        android:layout_width="match_parent"
        android:layout_height="125px"
        android:background="@drawable/selector_1dp_btn_color_from_priamry_to_white"
        android:text="下一步"
        android:textColor="@color/selector_text_color_from_white_to_primary" />

</com.zhy.autolayout.AutoLinearLayout>
