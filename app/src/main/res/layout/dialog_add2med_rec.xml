<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="900px"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/textSize_48"
            android:layout_width="900px"
            android:layout_height="100px"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:paddingLeft="50px"
            android:text="添加到病历" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="@color/color_divider" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:layout_marginLeft="7px"
            android:layout_marginRight="7px"
            android:layout_marginTop="15px"
            android:background="@mipmap/report_bg">

            <TextView
                android:id="@+id/date_tv"
                style="@style/genera_title_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="2016年12月30日" />

            <TextView
                android:id="@+id/name_tv"
                style="@style/genera_title_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="100px"
                android:paddingRight="100px"
                android:text="小李" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/diagnosis_tv"
                style="@style/genera_title_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="腰间盘突出" />
        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:id="@+id/select_tv"
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:layout_marginTop="35px"
            android:background="@mipmap/pulldown_select"
            android:clickable="true"
            android:gravity="center_vertical"
            android:paddingLeft="40px"
            android:text="选择病程"
            android:textSize="40px" />

        <TextView
            android:id="@+id/popup_wd_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:layout_marginTop="20px" />

        <TextView
            style="@style/textSize_36"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:paddingLeft="50px"
            android:text="病程信息"
            android:textColor="@color/color_primary_dark" />

        <EditText
            android:id="@+id/course_of_desease_info"
            style="@style/EditText_Hint" />

        <TextView
            style="@style/Divider"
            android:layout_marginBottom="30px" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="130px">

            <TextView
                android:id="@+id/no"
                style="@style/textSize_54"
                android:layout_width="190px"
                android:layout_height="100px"
                android:layout_alignTop="@+id/yes"
                android:layout_marginRight="60px"
                android:layout_toLeftOf="@+id/yes"
                android:background="@mipmap/no"
                android:clickable="true"
                android:gravity="center"
                android:text="取消"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/yes"
                style="@style/textSize_54"
                android:layout_width="190px"
                android:layout_height="100px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="50px"
                android:background="@mipmap/yes"
                android:clickable="true"
                android:gravity="center"
                android:text="确定"
                android:textColor="@android:color/white" />
        </RelativeLayout>
    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>

