<?xml version="1.0" encoding="utf-8"?>
<!--挂号模块新建就诊人页面布局-->
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36px"
        android:background="@color/color_white"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/textSize_48"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="54px"
                android:text="就诊人姓名："
                android:textColor="@color/color_general_and_title" />

            <EditText
                android:id="@+id/et_visiting_person_name"
                android:layout_width="666px"
                android:layout_height="100px"
                android:layout_marginRight="54px"
                android:paddingLeft="5px"
                android:paddingRight="5px"
                android:background="@drawable/gray_1dp_rounded_rectangle" />

        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/textSize_48"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="54px"
                android:text="身份证号："
                android:textColor="@color/color_general_and_title" />

            <EditText
                android:id="@+id/et_ID_number"
                android:layout_width="666px"
                android:layout_height="100px"
                android:layout_marginRight="54px"
                android:paddingLeft="5px"
                android:paddingRight="5px"
                android:inputType="number"
                android:maxLength="18"
                android:background="@drawable/gray_1dp_rounded_rectangle" />

        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/textSize_48"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="54px"
                android:text="就诊卡号："
                android:textColor="@color/color_general_and_title" />

            <EditText
                android:id="@+id/et_visiting_card_number"
                android:layout_width="666px"
                android:layout_height="100px"
                android:layout_marginRight="54px"
                android:paddingLeft="5px"
                android:paddingRight="5px"
                android:inputType="number"
                android:background="@drawable/gray_1dp_rounded_rectangle" />

        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/textSize_48"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="54px"
                android:text="手机号："
                android:textColor="@color/color_general_and_title" />

            <EditText
                android:id="@+id/et_phone_number"
                android:layout_width="666px"
                android:layout_height="100px"
                android:layout_marginRight="54px"
                android:paddingLeft="5px"
                android:paddingRight="5px"
                android:inputType="number"
                android:maxLength="11"
                android:background="@drawable/gray_1dp_rounded_rectangle" />

        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>

    <Button
        android:id="@+id/bt_confirm_registration"
        android:layout_width="978px"
        android:layout_height="126px"
        android:layout_marginTop="90px"
        android:layout_gravity="center_horizontal"
        android:text="确认挂号"
        style="@style/textSize_54"
        android:textColor="@color/selector_text_color_from_white_to_primary"
        android:background="@drawable/selector_4dp_btn_color_from_priamry_to_white"/>

</com.zhy.autolayout.AutoLinearLayout>
