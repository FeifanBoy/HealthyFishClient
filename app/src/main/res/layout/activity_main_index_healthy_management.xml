<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_content_area_bg"
    android:orientation="vertical"
    tools:context="com.healthyfish.healthyfish.ui.activity.HealthyManagement.MainIndexHealthyManagement">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--体质状态部分-8种体质-->
            <com.healthyfish.healthyfish.ui.widget.AutoCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                app:cardElevation="2dp">

                <!--8种体质类型-->
                <TextView
                    android:id="@+id/tv_healthy_identification"
                    android:layout_width="match_parent"
                    android:layout_height="160px"
                    android:gravity="center"
                    android:maxLines="2"
                    android:textSize="12sp" />
            </com.healthyfish.healthyfish.ui.widget.AutoCardView>

            <!--整体计划总体进图条-->
            <com.healthyfish.healthyfish.ui.widget.AutoCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                app:cardElevation="2dp">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="80px"
                        android:background="@color/color_white"
                        android:text="    整体计划"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="600px"
                        android:background="@color/color_forth" />
                </com.zhy.autolayout.AutoLinearLayout>
            </com.healthyfish.healthyfish.ui.widget.AutoCardView>

            <!--选择单项计划-->
            <com.healthyfish.healthyfish.ui.widget.AutoCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                app:cardElevation="2dp">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="80px"
                        android:background="@color/color_white"
                        android:text="    单项计划"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="600px"
                        android:background="@color/color_third" />

                    <TextView
                        android:id="@+id/tv_add_more_single_plan"
                        android:layout_width="match_parent"
                        android:layout_height="120px"
                        android:background="@color/color_white"
                        android:gravity="center"
                        android:text="+添加单项计划"/>

                </com.zhy.autolayout.AutoLinearLayout>
            </com.healthyfish.healthyfish.ui.widget.AutoCardView>

            <!--定制整体计划-->
            <com.healthyfish.healthyfish.ui.widget.AutoCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                app:cardElevation="2dp">

                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="600px"
                        android:background="@color/color_secondary_light" />

                    <Button
                        android:id="@+id/btn_total_healthy_scheme"
                        android:layout_width="540px"
                        android:layout_height="144px"
                        android:layout_centerInParent="true"
                        android:background="@drawable/selector_4dp_btn_color_from_priamry_to_white"
                        android:text="定制整体计划"
                        android:textColor="@color/color_white"
                        android:textSize="16sp" />

                </com.zhy.autolayout.AutoRelativeLayout>
            </com.healthyfish.healthyfish.ui.widget.AutoCardView>

        </com.zhy.autolayout.AutoLinearLayout>

    </ScrollView>

</com.zhy.autolayout.AutoLinearLayout>
