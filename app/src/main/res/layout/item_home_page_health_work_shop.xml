<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="540px"
        android:layout_height="360px"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <com.healthyfish.healthyfish.ui.widget.AutoCardView
            android:layout_width="450px"
            android:layout_height="248px"
            app:cardCornerRadius="24px"
            app:cardElevation="2dp">

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_work_shop_commodity"
                    android:layout_width="160px"
                    android:layout_height="160px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30px"
                    android:src="@mipmap/image_home_page_work_shop" />

                <TextView
                    android:id="@+id/name_work_shop_commodity"
                    style="@style/content_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30px"
                    android:gravity="right"
                    android:text="中医面膜" />

                <ImageView
                    android:id="@+id/whether_hot_sale"
                    android:layout_width="160px"
                    android:layout_height="160px"
                    android:layout_alignParentRight="true"
                    android:background="@mipmap/image_recommended_commodity" />

            </com.zhy.autolayout.AutoRelativeLayout>
        </com.healthyfish.healthyfish.ui.widget.AutoCardView>

    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>